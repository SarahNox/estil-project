	<link rel='stylesheet' href='/stylesheets/auth.css'>
	<link href='//fonts.googleapis.com/css?family=Open+Sans:400,300,600,700,800' rel='stylesheet' type='text/css'>
</head>

<body>
	<div class="main-agileits">
		<h1>Tiny Ui Login Form</h1>
		<div class="mainw3-agileinfo">
			<!-- login form -->
			<div class="login-form">
				<div class="login-agileits-top">
					<form action="/login" method="post">
						<p>Username </p>
						<input id="input1" type="text" class="email" name="username" placeholder="Email address" required=""/>
						<p>Password</p>
						<input id="input2" type="password" class="password" name="password" placeholder=".........." required=""/>
						<% if (typeof(message) != "undefined") {%>
							<div class="error-message"><%= message %></div>
						<% } %>
						<input type="submit" value="Login">
					</form>
				</div>
				<div class="login-agileits-bottom">
					<h6><a href="#">Forgot password?</a></h6>
				</div>

			</div>
		</div>
	</div>
