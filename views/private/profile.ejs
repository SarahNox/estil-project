<head>
	<link rel="stylesheet" href="/stylesheets/profiles.css">
</head>
<a href="/profile/pictures">Pictures</a>
<br>
<a href="/profile/edit">Edit Profile</a>
<br>
<a href="/logout">Logout</a>
<br>

<div class="col-lg-3 col-md-4 col-xs-6 thumb">
  <a class="thumbnail" href="#">
    <% console.log(picture);
    if (picture){%>
    <img class="img-responsive" src="<%=picture.pic_path%>" alt="">
    <%} else {%>
    <img class="img-responsive" src="/images/default-avatar.png" alt="">
    <%}%>
  </a>
</div>


<%var name = user.firstName + " " + user.lastName %>

<table>
  <tr>
    <td>Name</td>
    <td><%= name %></td>
  </tr>
	<tr>
		<td>Username</td>
		<td><%=user.username%></td>
	</tr>
  <tr>
    <td>Appointments</td>
    <td><%=user.appointments%></td>
  </tr>
  <tr>
		<td>Reviews</td>
    <% if (user.reviews){%>
    <% user.reviews.forEach((userRev)=>{%>
		<td><%=userRev%></td>
    <%});%>
    <%} else {%>
    <td>You haven't left any reviews yet. <a href="/profile/edit">Add a review </a></td>
    <%}%>
	</tr>
</table>

<script src="/javascripts/profile.js"></script>
