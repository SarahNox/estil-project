<head>
	<link rel="stylesheet" href="/stylesheets/profiles.css">
</head>
<body>

<a href="/stylist/profile">Profile</a>
<br>
<a href="/logout">Logout</a>
<div class="col-lg-3 col-md-4 col-xs-6 thumb">
  <form action="/stylist/profile/photo-upload" method="POST" enctype="multipart/form-data">
    <a class="thumbnail" href="#">
      <%if (picture){%>
      <img class="img-responsive" src="<%=picture.pic_path%>" alt="">
      <%} else {%>
      <img class="img-responsive" src="/images/default-avatar.png" alt="">
      <%}%>
    </a>
    <input type="file" name="file">
    <input type="submit" value="Upload">
  </form>
</div>

<%console.log(user.services)%>

<form action="/stylist/profile/edit" method="POST">

  <h5>Add a profile picture</h5>
  <input type="file" name="avatar">
  <img src="<%=user.avatar%>" alt="">

  <label for="firstName">First name:</label>
  <input type="text" name="firstName" value="<%=user.firstName%>">
  <label for="lastName">Last name:</label>
  <input type="text" name="lastName" value="<%=user.lastName%>">
  <label for="username">Username:</label>
  <input type="text" name="username" value="<%=user.username%>">
	<label for="checkbox">Services:</label>
	<label class="checkbox-inline">
		<% if (user.services.indexOf("Cut") != -1) {%>
			<input type="checkbox" name="cut" value="Cut" checked>Cut
		<%} else {%>
			<input type="checkbox" name="cut" value="Cut">Cut
		<%}%>
	</label>
	<label class="checkbox-inline">
		<% if (user.services.indexOf("Blow Dry") != -1) {%>
			<input type="checkbox" name="blowdry" value="Blow Dry" checked>Blow Dry
		<%} else {%>
			<input type="checkbox" name="blowdry" value="Blow Dry">Blow Dry
		<%}%>
	</label>
	<label class="checkbox-inline">
		<% if (user.services.indexOf("Color") != -1) {%>
			<input type="checkbox" name="color" value="Color" checked>Color
		<%} else {%>
			<input type="checkbox" name="color" value="Color">Color
		<%}%>
	</label>
	<br>
  <label for="expertise">Expertise:</label>
  <input type="text" name="expertise" value="<%=user.expertise%>">
  <label for="description">Description:</label>
	<br>
  <textarea type="text" name="description" value="<%=user.description%>"></textarea>
	<br>
  <label for="languages">Languages:</label>
  <input type="text" name="languages" value="<%=user.languages%>">
  <label for="price">Price:</label>
  <input type="text" name="price" value="<%=user.price%>">
  <label for="availability">Availability:</label>
  <input type="text" name="availability" value="<%=user.availability%>">
  <label for="mobile">Home visits/Salon:</label>
  <input type="text" name="mobile" value="<%=user.mobile%>">
  <label for="location">Location:</label>
  <input type="text" name="location" id="location" value="<%=user.location%>">
	<input type="text" name="lon" id="lon">
	<input type="text" name="lat" id="lat">
  <button type="submit">Update profile</button>
</form>



<script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAPr_6SPIIKbgLtuwBMSnZmiAg2kTwlXPc&libraries=places"></script>
<script src="../../javascripts/getlocations.js"></script>
</body>
