<head>
	<link rel="stylesheet" href="/stylesheets/profiles.css">
</head>
<body>

<a href="/profile">Profile</a>
<br>
<a href="/logout">Logout</a>
<br>
<div class="col-lg-3 col-md-4 col-xs-6 thumb">
  <form action="/profile/photo-upload" method="POST" enctype="multipart/form-data">
    <a class="thumbnail" href="#">
      <% console.log(picture);
      if (picture){%>
      <img class="img-responsive" src="<%=picture.pic_path%>" alt="">
      <%} else {%>
      <img class="img-responsive" src="/images/default-avatar.png" alt="">
      <%}%>
    </a>
    <input type="file" name="file">
    <input type="submit" value="Upload">
  </form>
</div>

<form action="/profile/edit" method="POST">
  <label for="firstName">First name:</label>
  <input type="text" name="firstName" value="<%=user.firstName%>">
  <label for="lastName">Last name:</label>
  <input type="text" name="lastName" value="<%=user.lastName%>">
  <label for="username">Username:</label>
  <input type="text" name="username" value="<%=user.username%>">
  <div>
    <tr>
      <td>Appointment:</td>
      <% appointments.forEach((app)=> {%>
        <tr>
          <td>When: <%=app.date.toDateString()%></td>
          <td>At: <%=app.startTime.toLocaleTimeString()%></td>
          <td>With: <a href="/view-stylist/<%=app.stylist.firstName%>.<%=app.stylist.lastName%>"><%=app.stylist.username %></td></a>
        </tr>
        <a href=#>Leave a review</a>
        <br></br>
        <%});%>
        <br></br>
        <label for="review">Leave a review for:</label>
        <input type="text" name="stylistName" value="<%=appointments[0].stylist.username%>">
        <label for="stars">Star Rating:</label>
        <input type="number" name="stars">
        <textarea name="review" id="review" cols="30" rows="10"></textarea>
        <br>
  </div>


  <br>
  <button type="submit">Update profile</button>
</form>

</body>
